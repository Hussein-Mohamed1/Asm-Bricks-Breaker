{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Assemble with Player1 in DOSBox",
      "type": "shell",
      "windows": {
        "command": "C:\\DOSBox-X\\dosbox-x.exe"
      },
      "linux": {
        "command": "dosbox-x"
      },
      "args": [
        "-noconsole",
        "-conf",
        "${workspaceFolder}\\p1\\p1.conf",
        "-c",
        "mount C ${workspaceFolder}",
        "-c",
        "set PATH=%PATH%;C:/8086;",
        "-c",
        "C:",
        "-c",
        "cd p1",
        "-c",
        "DEL p1.exe",
        "-c",
        "TASM.EXE ..\\*.asm /m2",
        "-c",
        "LINK.EXE main win winmes blocks ball paddle losemes hearts move poll send username estbconn,p1.exe;",
        "-c",
        "copy *.obj output.bin",
        "-c",
        "copy p1.exe output.bin",
        "-c",
        "DEL *.obj",
        // "-c",
        // "DEL output.bin",
        // "-c",
        // "p1",
        // "-c",
        // "exit"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Assemble with Player2 in DOSBox",
      "type": "shell",
      "windows": {
        "command": "C:\\DOSBox-X\\dosbox-x.exe"
      },
      "linux": {
        "command": "dosbox-x"
      },
      "args": [
        "-noconsole",
        "-conf",
        "${workspaceFolder}\\p2\\p2.conf",
        "-c",
        "mount C ${workspaceFolder}",
        "-c",
        "set PATH=%PATH%;C:/8086;",
        "-c",
        "C:",
        "-c",
        "cd p2",
        "-c",
        "DEL p2.exe",
        "-c",
        "TASM.EXE ..\\*.asm /m2",
        "-c",
        "LINK.EXE main win winmes blocks ball paddle losemes hearts move poll send username estbconn,p2.exe;",
        "-c",
        "copy *.obj output.bin",
        "-c",
        "copy p2.exe output.bin",
        "-c",
        "DEL *.obj",
        // "-c",
        // "DEL output.bin",
        // "-c",
        // "p2.exe",
        // "-c",
        // "exit"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Both Players",
      "dependsOn": [
        "Assemble with Player1 in DOSBox",
        "Assemble with Player2 in DOSBox"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
